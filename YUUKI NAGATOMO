        let currentLang = 'ja';

        function getItemName(item) {
            return item[`name_${currentLang}`] || item.name_ja;
        }
        
        function getItemDesc(item) {
            return item[`desc_${currentLang}`] || item.desc_ja || '';
        }

        function getItemNote(item) {
            return item[`note_${currentLang}`] || item.note_ja || '';
        }


        function formatPrice(price) {
            if (price === "時価" || price === "Market Price" || price === "싯가" || price === "时价") {
                return translations[currentLang].price_ask_staff || price;
            }
            return `¥${price}`;
        }

        function createMenuItemHTML(item) {
            const desc = getItemDesc(item);
            const note = getItemNote(item);
            const imageUrl = item.imageUrl;
            return `
                <div class="p-4 bg-white rounded-lg shadow price-group-item flex items-center space-x-4">
                    ${imageUrl ? `<img src="${imageUrl}" alt="${getItemName(item)}" class="w-20 h-20 object-cover rounded-md" onerror="this.onerror=null;this.src='https://placehold.co/100x100/E0E0E0/333333?text=No+Image';">` : ''}
                    <div class="flex-grow">
                        <div class="flex justify-between items-start">
                            <h4 class="font-semibold text-gray-700">${getItemName(item)}</h4>
                            <p class="text-lg font-bold lantern-red">${formatPrice(item.price)}</p>
                        </div>
                        ${desc ? `<p class="text-sm text-gray-500 mt-1">${desc}</p>` : ''}
                        ${note ? `<p class="text-xs text-blue-500 mt-1">${note}</p>` : ''}
                    </div>
                </div>
            `;
        }

        // Modified createPriceGroupAccordionHTML to accept itemType
        function createPriceGroupAccordionHTML(price, items, lang, itemType) {
            const groupId = `price-group-${price}-${Math.random().toString(36).substr(2, 5)}`;
            let itemsHTML = items.map(item => {
                 const desc = item[`desc_${lang}`] || item.desc_ja || '';
                 const note = item[`note_${lang}`] || item.note_ja || '';
                 const imageUrl = item.imageUrl;
                 return `
                    <div class="p-3 border-t border-gray-200 price-group-item flex items-center space-x-3">
                        ${imageUrl ? `<img src="${imageUrl}" alt="${item[`name_${lang}`] || item.name_ja}" class="w-16 h-16 object-cover rounded-md" onerror="this.onerror=null;this.src='https://placehold.co/100x100/E0E0E0/333333?text=No+Image';">` : ''}
                        <div>
                            <p class="font-medium text-gray-700">${item[`name_${lang}`] || item.name_ja}</p>
                            ${desc ? `<p class="text-xs text-gray-500 mt-0.5">${desc}</p>` : ''}
                            ${note ? `<p class="text-xs text-blue-500 mt-0.5">${note}</p>` : ''}
                        </div>
                    </div>
                 `;
            }).join('');

            const suffixKey = `items_in_group_${itemType}`; // 'items_in_group_skewers' or 'items_in_group_drinks'
            const suffixText = translations[lang][suffixKey] || '';

            return `
                <div class="border border-gray-300 rounded-lg overflow-hidden shadow-sm">
                    <button class="accordion-button w-full flex justify-between items-center p-4 bg-gray-50 hover:bg-gray-100 focus:outline-none" onclick="toggleAccordion(this)">
                        <span class="font-semibold text-red-600" data-price="${price}">¥${price}${suffixText}</span>
                        <svg class="w-5 h-5 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <div class="accordion-content bg-white">
                        ${itemsHTML}
                    </div>
                </div>
            `;
        }
        
        function toggleAccordion(buttonElement) {
            buttonElement.classList.toggle('active');
            const icon = buttonElement.querySelector('svg');
            icon.classList.toggle('rotate-180');
        }

        function renderMenu() {
            const omakaseContainer = document.getElementById('omakase-items');
            const chickenSashimiContainer = document.getElementById('chicken-sashimi-items').querySelector('.space-y-3');
            const aLaCarteContainer = document.getElementById('a-la-carte-items').querySelector('.space-y-3');
            const specialSkewerContainer = document.getElementById('special-skewer-items');
            const riceDishesContainer = document.getElementById('rice-dishes-items').querySelector('.space-y-3');
            const alcoholicDrinksContainer = document.getElementById('alcoholic-drinks-items').querySelector('.space-y-3');
            
            const chickenSkewerPriceGroupContainer = document.getElementById('chicken-skewer-price-groups');
            const vegetableSkewerPriceGroupContainer = document.getElementById('vegetable-skewer-price-groups');
            const softDrinksPriceGroupContainer = document.getElementById('soft-drinks-price-groups').querySelector('.space-y-2');

            omakaseContainer.innerHTML = '';
            chickenSashimiContainer.innerHTML = '';
            aLaCarteContainer.innerHTML = '';
            specialSkewerContainer.innerHTML = '';
            riceDishesContainer.innerHTML = '';
            alcoholicDrinksContainer.innerHTML = '';
            chickenSkewerPriceGroupContainer.innerHTML = '';
            vegetableSkewerPriceGroupContainer.innerHTML = '';
            softDrinksPriceGroupContainer.innerHTML = '';

            const chickenSkewersByPrice = {};
            const vegetableSkewersByPrice = {};
            const softDrinksByPrice = {};

            menuData.forEach(item => {
                const categoryKey = `category_${currentLang}`;
                const subCategoryKey = `sub_category_${currentLang}`;

                if (item[categoryKey] === translations[currentLang].nav_omakase || item.category_ja === "おまかせ") {
                    omakaseContainer.innerHTML += createMenuItemHTML(item);
                } else if (item[categoryKey] === translations[currentLang].food_cat_chicken_sashimi || item.category_ja === "鶏刺") {
                    chickenSashimiContainer.innerHTML += createMenuItemHTML(item);
                } else if (item[categoryKey] === translations[currentLang].food_cat_a_la_carte || item.category_ja === "一品") {
                    aLaCarteContainer.innerHTML += createMenuItemHTML(item);
                } else if (item[categoryKey] === translations[currentLang].food_cat_rice_dishes || item.category_ja === "御飯物") {
                    riceDishesContainer.innerHTML += createMenuItemHTML(item);
                } else if (item[categoryKey] === translations[currentLang].food_subcat_special_skewers || item.category_ja === "変わり種串") {
                    specialSkewerContainer.innerHTML += createMenuItemHTML(item);
                } else if (item.category_ja === "焼鳥串") { // Use original Japanese category for logic
                    if (!chickenSkewersByPrice[item.price]) chickenSkewersByPrice[item.price] = [];
                    chickenSkewersByPrice[item.price].push(item);
                } else if (item.category_ja === "野菜串") { // Use original Japanese category for logic
                    if (!vegetableSkewersByPrice[item.price]) vegetableSkewersByPrice[item.price] = [];
                    vegetableSkewersByPrice[item.price].push(item);
                } else if (item.category_ja === "御飲物") { // Use original Japanese category for logic
                    if (item.sub_category_ja === "ソフトドリンク") { // Use original Japanese sub-category for logic
                         if (!softDrinksByPrice[item.price]) softDrinksByPrice[item.price] = [];
                         softDrinksByPrice[item.price].push(item);
                    } else {
                        alcoholicDrinksContainer.innerHTML += createMenuItemHTML(item);
                    }
                }
            });
            
            Object.keys(chickenSkewersByPrice).sort((a,b) => a-b).forEach(price => {
                chickenSkewerPriceGroupContainer.innerHTML += createPriceGroupAccordionHTML(price, chickenSkewersByPrice[price], currentLang, 'skewers');
            });
            Object.keys(vegetableSkewersByPrice).sort((a,b) => a-b).forEach(price => {
                vegetableSkewerPriceGroupContainer.innerHTML += createPriceGroupAccordionHTML(price, vegetableSkewersByPrice[price], currentLang, 'skewers');
            });
            Object.keys(softDrinksByPrice).sort((a,b) => a-b).forEach(price => {
                softDrinksPriceGroupContainer.innerHTML += createPriceGroupAccordionHTML(price, softDrinksByPrice[price], currentLang, 'drinks');
            });


            // Translate static text
            document.querySelectorAll('[data-translate-key]').forEach(el => {
                const key = el.dataset.translateKey;
                if (translations[currentLang] && translations[currentLang][key]) {
                    // Removed special handling for price_group_title as it's now handled in createPriceGroupAccordionHTML
                    el.textContent = translations[currentLang][key];
                }
            });
            
            // Update active language button
            document.querySelectorAll('.lang-button').forEach(btn => {
                btn.classList.remove('active');
                if (btn.classList.contains(currentLang)) {
                    btn.classList.add('active');
                }
            });
        }

        function switchLanguage(lang) {
            currentLang = lang;
            document.documentElement.lang = lang;
            renderMenu();
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('currentYear').textContent = new Date().getFullYear();
            const userLang = navigator.language || navigator.userLanguage;
            if (userLang.startsWith('en')) {
                currentLang = 'en';
            } else if (userLang.startsWith('ko')) {
                currentLang = 'ko';
            } else if (userLang.startsWith('zh')) {
                currentLang = 'zh';
            } else {
                currentLang = 'ja'; // Default
            }
            switchLanguage(currentLang);

            // Smooth scrolling for navigation links
            document.querySelectorAll('nav a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                         // Calculate offset considering sticky header and nav
                        const headerHeight = document.querySelector('header').offsetHeight;
                        const navHeight = document.querySelector('nav').offsetHeight;
                        const offsetPosition = targetElement.offsetTop - headerHeight - navHeight;
                        
                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });

    </script>
</body>
</html>
